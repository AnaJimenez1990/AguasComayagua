<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.informatica2.aguascomayagua.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:text="Sistema de Facturacion"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
        @style/TextAppearance.AppCompat.Button" />

        <TextView
            android:id="@+id/textView48"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="Servicio Aguas de Comayagua"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"></LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="141dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:text="Usuario"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="200dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:text="ContraseÃ±a"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:ems="10"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:text="Ingresar" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:text="Cancelar" />

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>


